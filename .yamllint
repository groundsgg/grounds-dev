# yamllint configuration for Grounds Development Infrastructure
# Ensures consistent YAML formatting across the repository

extends: default

rules:
  # Brackets
  brackets:
    max-spaces-inside: 1
    min-spaces-inside: 0

  # Braces
  braces:
    max-spaces-inside: 1
    min-spaces-inside: 0

  # Colons
  colons:
    max-spaces-after: 1
    max-spaces-before: 0

  # Commas
  commas:
    max-spaces-before: 0
    min-spaces-after: 1

  # Comments
  comments:
    min-spaces-from-content: 1

  # Comments indentation
  comments-indentation:
    level: warning

  # Document end
  document-end:
    present: false

  # Document start
  document-start: disable

  # Empty lines
  empty-lines:
    max: 2
    max-end: 1
    max-start: 0

  # Empty values
  empty-values:
    forbid-in-block-mappings: true
    forbid-in-flow-mappings: true

  # Hyphens
  hyphens:
    max-spaces-after: 1

  # Indentation
  indentation:
    check-multi-line-strings: false
    indent-sequences: true
    spaces: 2

  # Key duplicates
  key-duplicates:
    level: error

  # Key ordering
  key-ordering: disable

  # Line length
  line-length: disable

  # Octal values
  octal-values:
    forbid-implicit-octal: true

  # Quoted strings
  quoted-strings:
    quote-type: double
    required: only-when-needed

  # Trailing spaces
  trailing-spaces:
    level: error

  # Truthy values
  truthy:
    allowed-values: ["true", "false", "on", "off", "yes", "no"]
    check-keys: false
